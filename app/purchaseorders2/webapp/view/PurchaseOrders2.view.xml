<mvc:View controllerName="purchaseorders2.controller.PurchaseOrders2"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}" >
    <content>
    <Table
    mode="MultiSelect"
      class="sapUiResponsiveMargin"
      width="auto"
      items="{path : '/PO_HEAD', sorter : {
            path : 'EBELN' ,
             group : false
         }	, parameters: { 	$count : true,$$updateGroupId : 'POUpdateGroup' ,
                  	$filter :		'IsActiveEntity eq false or SiblingEntity/IsActiveEntity eq null' ,$$getKeepAliveContext : true,
							$$patchWithoutSideEffects : true
                   }}" 
      id="TableP">
      <headerToolbar>
         <Toolbar id="tbar">
        
            <Title text="{i18n>purchaseorders}" id="title"/>
            <ToolbarSpacer id="tlbspabe"/>
             <Button
                        text="{i18n>create}"
                        icon = "sap-icon://add"
                        press=".onCreate" id = "BT"
                        class="btn1"/>
                         <Button
                        text="{i18n>delete}"
                        icon = "sap-icon://delete"
                        press=".onDelete" id = "BT1"
                        class="btn1"/>
                        <Button
                        text="{i18n>refresh}"
                        icon = "sap-icon://refresh"
                        press=".Rfresh" id = "BT2"
                        class="btn1"/>
            <SearchField 
               width="25%" 
               search=".onFilterOrders" id="sfield"/>
         </Toolbar>
      </headerToolbar>
      <columns>
      <Column id="c2">
				<Text text="{i18n>Purcahsedocumentno} " id="t2" />
			</Column>
			<Column id="c4"
				minScreenWidth="Tablet"
				demandPopin="false">
				<Text text="{i18n>businesspartner}" id="t4"/>
			</Column>
          <Column id="c3">
				<Text text="Active Entity" id="t3" />
			</Column>
			
		</columns>
      <items>
         <ColumnListItem id="clmlst"
                type="Navigation"
                press=".onObject"   >
                 <cells>
				<ObjectIdentifier title="{EBELN}" id="objIden2" />
            <ObjectIdentifier title="{PARTNER_PARTNER}" text="{PARTNER/NAME}" id="objIden1" />
            <Text id="ACTIVEtxt" text="{IsActiveEntity}"/>
				
				</cells>
                </ColumnListItem>
      </items>
   </Table>
        </content>
    </Page>
</mvc:View>
