<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
   <Dialog
      id="dlg"
      title="Hello {/recipient/name}">
       <content>
         <core:Icon
            src="sap-icon://hello-world"
            size="8rem"
            class="sapUiMediumMargin" id="ICN"/>
      </content>
      <beginButton>
         <Button
            text="{i18n>dialogCloseButtonText}"
            press=".onCloseDialog" id = "di-btn"/>
            
      </beginButton>
      </Dialog>
</core:FragmentDefinition>