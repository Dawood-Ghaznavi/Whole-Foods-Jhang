<mvc:View
   controllerName="materials2.controller.panel"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">

<Panel
                  headerText="{i18n>helloPanelTitle}" id = "PN"
                  class="sapUiResponsiveMargin"
							width="auto">
                  <content>
                   <Button
         id="helloDialogButton"
         text="{i18n>openDialogButtonText}"
         press=".onOpenDialog"
         class="sapUiSmallMarginEnd"
         icon="sap-icon://world"/>
                     <Button
                        text="{i18n>showHelloButtonText}"
                        press=".onShowHello" id = "BT"
                        class="btn"/>
                     <Input
                        value="{/recipient/name}"
                        valueLiveUpdate="true"
                        width="30%" id="INP"/>
                        <Text text="Hello {/recipient/name}" id="txt" class="sapUiSmallMargin sapThemeHighlight-asColor txt"/>

                        
                  </content>
               </Panel>
 </mvc:View>